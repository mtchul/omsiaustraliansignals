{init}
{end}


{frame}
	(L.$.NoOfPages) "1" $=
	{if}
		1 (S.L.RedLight1)
	{endif}

	(L.$.Slide1Image) "" $=
		{if}
			"vms_texttexture1.jpg" (S.$.vms_slide1)
		{else}
			"VMS\" (L.$.Slide1Image) ".png" $+ $+ (S.$.vms_slide1)
		{endif}
	
	(L.$.Slide2Image) "" $=
		{if}
			"vms_texttexture2.jpg" (S.$.vms_slide2)
		{else}
			"VMS\" (L.$.Slide2Image) ".png" $+ $+ (S.$.vms_slide2)
		{endif}

	(L.$.Slide3Image) "" $=
	{if}
		"vms_texttexture3.jpg" (S.$.vms_slide3)
	{else}
		"VMS\" (L.$.Slide2Image) ".png" $+ $+ (S.$.vms_slide3)
	{endif}

	(L.$.NoOfPages) "2" $=
	{if}
		(L.L.Timer) (L.S.Timegap) + (S.L.Timer)
		s0 2 <
		{if}
		0 (S.L.RedLight2)
		1 (S.L.RedLight1)
		{else}
		l0 4 <
		{if}
		0 (S.L.RedLight1)
		1 (S.L.RedLight2)
		{else}
		0 (S.L.Timer)
		{endif}
		{endif}
	{endif}
	
	(L.$.NoOfPages) "3" $=
	{if}
		(L.L.Timer) (L.S.Timegap) + (S.L.Timer)
		s0 2 <
		{if}
		0 (S.L.RedLight3)
		1 (S.L.RedLight1)
		{else}
		l0 4 <
		{if}
		0 (S.L.RedLight1)
		1 (S.L.RedLight2)
		{else}
		l0 6 <
		{if}
		0 (S.L.RedLight2)
		1 (S.L.RedLight3)
		{else}
		0 (S.L.Timer)
		{endif}
	{endif}
 {endif}
{endif}
	
	
{end}